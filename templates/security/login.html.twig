{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block titre %} {% endblock %}

{% block body %}
<form method="post" class="centre">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="form-group row justify-content-center">
        <label for="inputUsername" class="col-sm-1 col-form-label">Identifiant : </label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control col-sm-3" required autofocus>
    </div>
    <div class="form-group row justify-content-center">
        <label for="inputPassword" class="col-sm-1 col-form-label">Mot de passe :</label>
        <input type="password" name="password" id="inputPassword" class="form-control col-sm-3" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}" >

    <div class="form-group row justify-content-center">
        <button class="btn btn-secondary col-sm-1 col-form-label" type="submit">
            Connexion
        </button>
        <div class="checkbox mb-3 col-sm-2 col-form-label">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
            <br>
            <a href="" class="text-secondary">Mot de passe oubli√©</a>
        </div>
    </div>
</form>
{% endblock %}
