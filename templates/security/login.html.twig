{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block titre %} {% endblock %}

{% block body %}
<form method="post" class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 centre">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="form-inline justify-content-center justify-content-sm-between">
        <label for="inputUsername" class="col-form-label">Identifiant : </label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control col-sm-8" required autofocus>
    </div>
    <div class="form-inline justify-content-center justify-content-sm-between">
        <label for="inputPassword" class="col-form-label">Mot de passe :</label>
        <input type="password" name="password" id="inputPassword" class="form-control col-sm-8" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

    <div class="form-group row justify-content-center my-4">
        <button class="btn btn-lg btn-secondary p-3" type="submit">
            Connexion
        </button>
        <div class="checkbox col-form-label m-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
            <br>
            <a href="{{ path ('app_forgot_password_request') }}" class="text-secondary">Mot de passe oubli√©</a>
        </div>
    </div>
</form>
{% endblock %}
