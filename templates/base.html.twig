<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Sortir.com">
        <meta name="author" content="L&L">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Sortir{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset ("vendor/css/bootstrap.min.css") }}">
            <link rel="stylesheet" href="{{ asset ("css/bootstrapMinty.css") }}">
            <link rel="stylesheet" href="{{ asset ("css/style.css") }}">
        {% endblock %}
    </head>
    <body>
        {% include 'header.html.twig' %}
        <div class="flash">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="align-content-center alert alert-{{ label }} alert-dismissible fade show">
                        {{ message | raw }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <main class="container-fluid text-center scrollable">
            <div class="container-fluid">
                <h1>{% block titre %}{% endblock %}</h1>
                {% block body %}{% endblock %}
            </div>
        </main>
        {% include 'footer.html.twig' %}
        {% block javascripts %}
            <script src="{{ asset("vendor/js/jquery-3.5.1.min.js") }}"></script>
            <script src="{{ asset("vendor/js/popper.min.js") }}"></script>
            <script src="{{ asset("vendor/js/bootstrap.min.js") }}"></script>
            <script>
                function goBack() {
                    history.back();
                }
                $('.bouton-annuler').on('click', goBack);
                $('main').scroll( function () {
                    $('.alert').alert('close');
                });
            </script>
        {% endblock %}
    </body>
</html>
