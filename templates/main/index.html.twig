{% extends 'base.html.twig' %}
{% form_theme form 'form/bootstrap_4_horizontal_layout.html.twig' %}


{% block title %}Sortir.com{% endblock %}
{% block titre %}{% endblock %}

{% block body %}
    <div class="text-right">
        <h5>Date du jour : {{ date | date('d/m/Y') }}</h5>
        <h5>Participant : {{ app.user.pseudo }}</h5>
    </div>
    {{ form_start(form, {attr: {class: 'filter js-filter-form'}}) }}
<div class="formRecherche">
    <div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none">
        <span class="sr-only">Loading...</span>
    </div>
    <div class="row align-content-start">
        <div class="col-7">
            <h3>Filtrer les sorties</h3>
            {{ form_errors(form.campus) }}
            <div class="form-group row">
                <div class="col-8">{{ form_label(form.campus) }}</div>
                <div class="col-4">{{ form_widget(form.campus) }}</div>
            </div>
            {{ form_errors(form.q) }}
            <div class="form-group row">
                <div class="col-8">{{ form_label(form.q) }}</div>
                <div class="col-4">{{ form_widget(form.q) }}</div>
            </div>
            <div class="form-group row">
                <div class="col-6">{{ form_row(form.dateMin) }}</div>
                <div class="col-6">{{ form_row(form.dateMax) }}</div>
            </div>
        </div>
        <div class="col-4 align-bottom">
            {{ form_row(form.organisateur) }}
            {{ form_row(form.inscrit) }}
            {{ form_row(form.nonInscrit) }}
            {{ form_row(form.fini) }}
        </div>
        <div class="col-1">
            <button class="btn btn-primary btn-lg ">rechercher</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
    <div class="row justify-content-center tableFixHead">
        <table class="table table-striped table-bordered table-sm " cellspacing="0"
               width="100%">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="scrolltab">
            {% for sortie in sorties %}
                <tr class="sortie">
                    <td>{{ sortie.nom}}</td>
                    <td>{{ sortie.dateHeureDebut | date('d/m/Y H:i')}}</td>
                    <td>{{ sortie.dateLimiteInscription |date('d/m/Y') }}</td>
                    <td>{{ sortie.participants | length}}/{{ sortie.nbInscriptionsMax }}</td>
                    <td>{{ sortie.etat.libelle}}</td>
                    <td>
                        {% for participant in sortie.participants %}
                            {% if app.user.username == participant.mail %}
                                x
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td><a href="{{ path ('participant_user', {'id' : sortie.organisateur.idParticipant }) }}">{{ sortie.organisateur.pseudo}}</a></td>
                    <td>
                        {% set myVal = false %}
                        {#  si on est l'organisateur de la sortie #}
                        {% if app.user.username == sortie.organisateur.mail %}
                            {% if sortie.etat.libelle == 'créée' %}
                                <a href="{{ path ('sortie_modifier') }}">Modifier</a> - Publier
                            {% elseif sortie.etat.libelle == 'ouverte' or sortie.etat.libelle == 'clôturée' %}
                                <a href="{{ path ('sortie_afficher') }}">Afficher</a> - <a href="{{ path ('sortie_annuler') }}">Annuler</a>
                            {% else %}
                                <a href="{{ path ('sortie_afficher') }}">Afficher</a>
                            {% endif %}
                            {% set myVal = true %}
                        {% endif %}

                        {% for participant in sortie.participants %}
                            {#  si on est inscrit à la sortie #}
                            {% if app.user.username == participant.mail %}
                                {% if sortie.etat.libelle == 'ouverte' or sortie.etat.libelle == 'clôturée' %}
                                    <a href="{{ path ('sortie_afficher') }}">Afficher</a> - Se désister
                                {% elseif sortie.etat.libelle == 'créée' %}
                                    <p></p>
                                {% else %}
                                    <a href="{{ path ('sortie_afficher') }}">Afficher</a>
                                {% endif %}
                            {% set myVal = true %}
                            {% endif %}
                        {% endfor %}
                            {#  autrement : pas orga, pas inscrit #}
                            {% if myVal == false %}
                                {% if sortie.etat.libelle == 'ouverte' %}
                                    <a href="{{ path ('sortie_afficher') }}">Afficher</a> - S'inscrire'
                                {% elseif sortie.etat.libelle == 'créée' %}
                                    <p></p>
                                {% else %}
                                    <a href="{{ path ('sortie_afficher') }}">Afficher</a>
                                {% endif %}
                            {% endif %}

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="d-flex flex-row">
        <a class="btn btn-primary p-2" href="{{ path ('sortie_nouvelle') }}">Créer une sortie</a>
    </div>

{% endblock %}
